<form action="/edit/<%= property.id %>" method="POST">
    <input type="text" name="title" value="<%= property.title %>" required>
    <textarea name="description"><%= property.description %></textarea>
    <input type="number" name="price" step="0.01" value="<%= property.price %>" required>
    <input type="text" name="location" value="<%= property.location %>" required>
    <label>Category:</label>
    <select name="category_id">
        <% categories.forEach(category=> { %>
            <option value="<%= category.id %>" <% if (category.id==property.category_id) { %> selected <% } %> >
                    <%= category.name %>
            </option>
            <% }); %>
    </select>
    <button type="submit">Update Property</button>
</form>